<MudDialog>
    <DialogContent>
        <MudTextField T="int" Label="Id"></MudTextField>
        <MudTextField T="string" Label="Name"></MudTextField>
        <MudTextField T="string" Label="Email"></MudTextField>
        <MudTextField T="string" Label="Noi Dung"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton OnClick="Save">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }
    private void Cancel() => MudDialog.Cancel();
    private void Save() => MudDialog.Close(DialogResult.Ok(true));
}
